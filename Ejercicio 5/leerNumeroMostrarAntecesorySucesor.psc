Proceso leerNumeroMostrarAntecesorySucesor
	Definir num,sucesor,antecesor Como Entero;
	Escribir 'Escribe el numero que quieres ver su antecesor y sucesor';
	Leer num;
	sucesor <- num+1;
	antecesor <- num-1;
	Escribir 'El antecesor del numero es:',antecesor;
	Escribir 'El sucesor del numero es:',sucesor;
FinProceso
